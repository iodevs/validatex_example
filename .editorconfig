# EditorConfig is awesome: http://EditorConfig.org

# .editorconfig for Elixir projects
# https://git.io/elixir-editorconfig

# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[.deliver/strategies/*]
indent_style = space
indent_size = 2

[*.{ex, exs}]
indent_style = space
indent_size = 2

[*.{md, markdown, eex, leex}]
trim_trailing_whitespace = false

[*.{html, html.eex, html.leex}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[Makefile]
indent_style = tab

